generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../db/sqlite.db"
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  password String
  name     String
  role     String
  orders   Order[]
}

model Product {
  id        Int     @id @default(autoincrement())
  name      String
  category  String
  price     Float
  image     String
  stock     Int
  rating    Float
  lifeStage String?
}

model Order {
  id           Int      @id @default(autoincrement())
  customerId   Int
  customerName String
  total        Float
  status       String
  date         DateTime @default(now())
  user         User     @relation(fields: [customerId], references: [id])
}